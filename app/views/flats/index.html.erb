<h2>All our flats (<%= @flats.count %>)</h2>
<%= link_to 'Add flat', new_flat_path %>

<div class="card-container">
  <% @flats.each do |flat| %>
    <div class="card" style="width: 18rem;">
      <img class="card-img-top" src="..." alt="Card image cap">
      <div class="card-body">
        <h5 class="card-title"><%= flat.name %></h5>
        <p class="card-text"><%= flat.description %></p>
        <ul class="list-inline">
           <li class="list-inline-item"><i class="fas fa-euro-sign"></i> <%= flat.price_per_night %></li>
           <li class="list-inline-item"><i class="fas fa-user-friends"></i> <%= flat.number_of_guests %></li>
        </ul>


      </div>
      <div class="card-footer">
          <%= link_to 'More info', flat_path(flat) %>
          <%= link_to 'Edit flat', edit_flat_path(flat) %>
          <%= link_to 'Delete flat', flat_path(flat), method: :delete,
            data: { confirm: "Are you sure?" }  %>
      </div>
    </div>
  <% end %>
</div>


